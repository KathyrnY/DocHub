<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DocHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">


    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/style.css">



</head>

<body>

    <div class="main-wrapper">

        <header class="header">

            <h1>Doc Hub</h1>

            </ul>
            </nav>
        </header>
        <!-- /Header -->

        <!-- Breadcrumb -->
        <div class="breadcrumb-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-12 col-12">

                        <h2 class="breadcrumb-title">My Patients</h2>
                    </div>
                </div>
            </div>
        </div>


        <!-- Page Content -->
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">

                        <!-- Profile Sidebar -->
                        <div class="profile-sidebar">
                            <div class="widget-profile pro-widget-content">
                                <div class="profile-info-widget">
                            
                                    <div class="profile-det-info">
                                        <h3>Doctor's name</h3>

                                        <div class="patient-details">
                                            <h5 class="mb-0">MDS - Oral Surgery</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dashboard-widget">
                                <nav class="dashboard-menu">

                                </nav>
                            </div>
                        </div>
                        <!-- /Profile Sidebar -->

                    </div>
                    <div class="col-md-7 col-lg-8 col-xl-9">

                        <div class="row row-grid">
                            {{#each patientData as |PD|}}
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <div class="card widget-profile pat-widget-profile">
                                    <div class="card-body">
                                        <div class="pro-widget-content">
                                            <div class="profile-info-widget">

                                                <div class="profile-det-info">
                                                    <h3><a href="patient-profile.html">{{PD.first_name}}
                                                            {{PD.last_name}}</a></h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="patient-info">
                                            <ul>
                                                <li>Age <span>{{PD.age}} Years, {{PD.gender}}</span></li>
                                                <li>Appointment time <span>{{PD.appttime}}</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                </div>

            </div>

        </div>
        <!-- /Page Content -->

    </div>




</body>
<a href="/dashboard/new">+ New Patient</button>
    <button type="button" id="allpatient">All My Patients</button>

</html>
<div>
    <a href="#" id="logout">Logout</a>
</div>
<script src="/public/js/dashboard.js"></script>